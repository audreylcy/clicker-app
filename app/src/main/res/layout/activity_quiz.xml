<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity"
    android:background="@color/white">


    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@id/radio_group"
        android:layout_marginBottom="-6dp"
        android:fontFamily="@font/zagregular"
        android:text="1. How Old Are You?"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtCountId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/radio_group"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
        android:fontFamily="@font/zagregular"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RadioButton
            android:id="@+id/radio_button1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/btnA"
            android:button="@null"
            android:text="A"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="btnAHandler"
            android:fontFamily="@font/zagbold"/>
            />
        <RadioButton
            android:id="@+id/radio_button2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/btnB"
            android:button="@null"
            android:text="B"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="btnBHandler"
            android:fontFamily="@font/zagbold"
            />
        <RadioButton
            android:id="@+id/radio_button3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/btnC"
            android:button="@null"
            android:text="C"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="btnCHandler"
            android:fontFamily="@font/zagbold"
            />
        <RadioButton
            android:id="@+id/radio_button4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/btnD"
            android:button="@null"
            android:text="D"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="btnDHandler"
            android:fontFamily="@font/zagbold"
            />
    </RadioGroup>
    <Button
        android:id="@+id/button_confirm_next"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_below="@id/radio_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@color/black"
        android:fontFamily="@font/zagbold"/>

    <TextView
        android:id="@+id/qnno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>